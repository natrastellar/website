{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch",
			"type": "typescript",
			"tsconfig": "src/tsconfig.json",
			"option": "watch",
			"problemMatcher": "$tsc-watch",
			"group": "build",
			"options": {
				"cwd": "${workspaceRoot}/src"
			}
		},
		{
			"label": "hugo server",
			"type": "shell",
			"command": "hugo",
			"args": [
				"server",
				"--watch",
				"--source",
				"hugo",
				"--destination",
				"${workspaceRoot}/dist",
				"--config",
				"config.toml,shared.toml"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceRoot}/src"
			}
		}
	]
}