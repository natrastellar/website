{
  "name": "alexplagman.com",
  "version": "1.0.0",
  "description": "Personal site of Alex Plagman",
  "main": "entry.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "./node_modules/.bin/webpack --progress -p && bundle exec jekyll build JEKYLL_ENV=production && rsync -av ./dist/ /var/www/html/",
    "watch-webpack": "./node_modules/.bin/webpack --progress --watch",
    "watch-jekyll": "bundle exec jekyll build --watch",
    "watch": "concurrently --kill-others \"npm run watch-webpack\" \"npm run watch-jekyll\"",
    "serve-jekyll": "bundle exec jekyll serve",
    "dev": "concurrently --kill-others \"npm run watch-webpack\" \"npm run serve-jekyll\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APlagman/AlexPlagman.com.git"
  },
  "author": "Alex Plagman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/APlagman/AlexPlagman.com/issues"
  },
  "homepage": "https://github.com/APlagman/AlexPlagman.com#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.5.1",
    "path": "^0.12.7",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1"
  },
  "dependencies": {
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.3"
  }
}
